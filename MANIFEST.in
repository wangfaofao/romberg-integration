# 包含这些文件在源代码发行版中
include README.md
include LICENSE
include MANIFEST.in
include pyproject.toml
include setup.py

# 包含 Cython 源文件
recursive-include . *.pyx
recursive-include . *.pxd
recursive-include . *.pxi

# 包含测试文件
recursive-include . *.py

# 排除不需要的文件
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude .git
global-exclude .gitignore
global-exclude .venv
global-exclude venv
global-exclude build
global-exclude dist
